<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="car"
                type="com.fedak.denis.mymvvm.model.Car"/>

        <variable
            name="handler"
            type="com.fedak.denis.mymvvm.handler.CarAdapterHandler" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> handler.onItemClick(car)}"
            android:padding="16dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/previewView"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:url="@{car.thumbnailUrl}"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/nameView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text='@{"Ð¡ar number:" + " " + String.valueOf(car.id)}'
                        android:paddingBottom="8dp"
                        tools:text="Name"/>

                <TextView
                        android:id="@+id/descriptionView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@{car.title}"
                        tools:text="Description"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>